@model IEnumerable<KurumsalWebProjesi.Models.Model.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Slider</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
           <img src="@item.ImageURL" width="150" height="150" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SliderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SliderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SliderId })
        </td>
    </tr>
}

</table>
