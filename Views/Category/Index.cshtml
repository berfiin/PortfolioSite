@model IEnumerable<KurumsalWebProjesi.Models.Model.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.CategoryId }) |
                @Html.ActionLink("Detay", "Details", new { id = item.CategoryId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.CategoryId })
            </td>
        </tr>
    }

</table>